<section class="px-6 py-4">
    <h1 class="text-2xl font-bold mb-4">Pesquisar Anúncios</h1>

    <form method="GET" action="/" class="mb-6 flex gap-2">
        <input type="text" name="termo" placeholder="Digite um termo"
               value="{{termo}}" class="border rounded px-2 py-1 flex-1">
        <button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700">Buscar</button>
    </form>

    {{#if anuncios}}
    <p class="text-gray-700 mb-4"><strong>Quantidade de anúncios encontrados:</strong> {{anuncios.length}}</p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each anuncios}}
        <div class="border rounded-lg shadow hover:shadow-lg transition p-4 flex flex-col">
            
            {{#if ad_snapshot_url}}
            <a href="{{ad_snapshot_url}}" target="_blank">
                <img src="{{ad_snapshot_url}}" alt="Anúncio" class="w-full h-48 object-cover rounded mb-3">
            </a>
            {{/if}}

            <p class="text-sm text-gray-500 mb-1"><strong>ID:</strong> {{id}}</p>

            <p class="text-gray-800 mb-4 line-clamp-3">{{ad_creative_body}}</p>

            <form method="POST" action="/save/ad" class="mt-auto">
                <input type="hidden" name="id" value="{{id}}">
                <input type="hidden" name="titulo" value="{{ad_creative_body}}">
                <button type="submit" class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 w-full">Salvar</button>
            </form>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p class="text-gray-500 mt-4">Nenhum anúncio encontrado.</p>
    {{/if}}
</section>
